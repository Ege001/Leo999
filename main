local function SafeLoading()
    local sg = Instance.new("ScreenGui", game.CoreGui)
    local frame = Instance.new("Frame", sg)
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundColor3 = Color3.fromRGB(5, 5, 12)
    
    local txt = Instance.new("TextLabel", frame)
    txt.Size = UDim2.new(0, 600, 0, 120)
    txt.Position = UDim2.new(0.5, -300, 0.45, 0)
    txt.Text = "SOVEREIGN APEX V46\nSistemler Optimize Ediliyor..." [cite: 1]
    txt.TextColor3 = Color3.fromRGB(0, 170, 255) [cite: 2]
    txt.Font = Enum.Font.GothamBold
    txt.TextSize = 35
    txt.BackgroundTransparency = 1
    
    task.wait(1.5)
    sg:Destroy()
end
pcall(SafeLoading)

