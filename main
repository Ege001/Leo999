-- 8. EKSTRALAR (MORPH & FOV)
ExtraTab:CreateSection("Avatar Transformation")

ExtraTab:CreateButton({
    Name = LangData[_G.Language].Morph,
    Callback = function()
        local targetID = 2433596482 -- Kƒ±z Avatar ID
        pcall(function()
            local hum = lp.Character:FindFirstChildOfClass("Humanoid")
            if hum then
                local desc = Players:GetHumanoidDescriptionFromUserId(targetID)
                hum:ApplyDescription(desc)
                Rayfield:Notify({Title = "Avatar", Content = LangData[_G.Language].NotifyMorph, Duration = 3})
            end
        end)
    end,
})

ExtraTab:CreateSection("Visuals")

ExtraTab:CreateSlider({
    Name = "FOV (Field of View)",
    Range = {70, 120},
    CurrentValue = _G.FOV,
    Callback = function(v) _G.FOV = v; Camera.FieldOfView = v end,
})

ExtraTab:CreateToggle({
    Name = LangData[_G.Language].InfJump,
    CurrentValue = _G.InfiniteJump,
    Callback = function(v) _G.InfiniteJump = v end,
})

-- 9. ANA D√ñNG√ú (STABƒ∞L)
RunService.Heartbeat:Connect(function()
    pcall(function()
        local char = lp.Character
        local hum = char:FindFirstChildOfClass("Humanoid")
        local hrp = char:FindFirstChild("HumanoidRootPart")
        
        if hum then
            hum.WalkSpeed = _G.SpeedEnabled and _G.Speed or 16
            hum.JumpPower = _G.JumpEnabled and _G.Jump or 50
        end
        
        if _G.Noclip and char then
            for _, v in pairs(char:GetDescendants()) do
                if v:IsA("BasePart") then v.CanCollide = false end
            end
        end
        
        if _G.Fly and hrp then
            if not hrp:FindFirstChild("SovereignFly") then
                local bv = Instance.new("BodyVelocity", hrp); bv.Name = "SovereignFly"; bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
                local bg = Instance.new("BodyGyro", hrp); bg.Name = "SovereignGyro"; bg.MaxTorque = Vector3.new(math.huge, math.huge, math.huge)
            end
            hrp.SovereignGyro.CFrame = Camera.CFrame
            local move = Vector3.new(0,0,0)
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then move = move + Camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then move = move - Camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then move = move + Camera.CFrame.RightVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then move = move - Camera.CFrame.RightVector end
            hrp.SovereignFly.Velocity = move * 60
        elseif hrp and hrp:FindFirstChild("SovereignFly") then
            hrp.SovereignFly:Destroy(); hrp.SovereignGyro:Destroy()
        end
    end)
end)

UserInputService.JumpRequest:Connect(function()
    if _G.InfiniteJump and lp.Character then
        lp.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
    end
end)

-- HUD
local function CreateHUD()
    local sg = Instance.new("ScreenGui", lp.PlayerGui)
    local f = Instance.new("Frame", sg); f.Size = UDim2.new(0, 160, 0, 60); f.Position = UDim2.new(0, 10, 0, 10); f.BackgroundColor3 = Color3.new(0,0,0); f.BackgroundTransparency = 0.5
    Instance.new("UICorner", f)
    local l = Instance.new("TextLabel", f); l.Size = UDim2.new(1,0,1,0); l.BackgroundTransparency = 1; l.TextColor3 = Color3.new(1,1,1); l.Font = Enum.Font.Code; l.TextSize = 12
    task.spawn(function()
        while task.wait(0.5) do
            if not sg.Parent then break end
            l.Text = string.format("SOVEREIGN V46 ELITE\nSPD: %d | JMP: %d\nFLY: %s", _G.Speed, _G.Jump, tostring(_G.Fly))
        end
    end)
end
CreateHUD()

Rayfield:Notify({Title = "Sovereign Elite", Content = "Script Ba≈üarƒ±yla Y√ºklendi!", Duration = 5})
