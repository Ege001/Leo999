    Name = LangData[_G.Language].ToggleJump,
    CurrentValue = _G.JumpEnabled,
    Callback = function(v) _G.JumpEnabled = v end,
})

MoveTab:CreateSlider({
    Name = LangData[_G.Language].Jump,
    Range = {50, 500},
    CurrentValue = _G.Jump,
    Callback = function(v) _G.Jump = v end,
})

MoveTab:CreateSection("Abilities")
