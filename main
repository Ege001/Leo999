-- 9. EKSTRALAR (Ä°STEDÄ°ÄÄ°N MORPH BUTONU BURADA)
local morphBtn = ExtraTab:CreateButton({
    Name = Translations[_G.Language]["Morph"],
    Callback = function()
        local id = 2433596482 -- KÄ±z Avatar ID
        pcall(function()
            local hum = lp.Character:FindFirstChildOfClass("Humanoid")
            if hum then
                local desc = Players:GetHumanoidDescriptionFromUserId(id)
                hum:ApplyDescription(desc)
                Rayfield:Notify({Title = "Avatar", Content = Translations[_G.Language]["NotifyMorph"], Duration = 3})
            end
        end)
    end,
})
UI_Elements["Morph"] = morphBtn

local iJTog = ExtraTab:CreateToggle({ Name = Translations[_G.Language]["InfJump"], Callback = function(v) _G.InfiniteJump = v end })
UI_Elements["InfJump"] = iJTog

local fovS = ExtraTab:CreateSlider({
    Name = Translations[_G.Language]["FOV"],
    Range = {70, 120},
    CurrentValue = _G.FOV,
    Callback = function(v) _G.FOV = v; Camera.FieldOfView = v end,
})
UI_Elements["FOV"] = fovS

-- 10. ANA DÃ–NGÃœ (HATASIZ Ã‡ALIÅTIRMA)
local loop = RunService.Heartbeat:Connect(function()
    pcall(function()
        local char = lp.Character
        local hum = char:FindFirstChildOfClass("Humanoid")
        local hrp = char:FindFirstChild("HumanoidRootPart")
        
        if hum then
            hum.WalkSpeed = _G.Speed
            hum.JumpPower = _G.Jump
            hum.UseJumpPower = true
        end
        
        if _G.Noclip then
            for _, p in pairs(char:GetDescendants()) do if p:IsA("BasePart") then p.CanCollide = false end end
        end
        
        if _G.Fly and hrp then
            if not hrp:FindFirstChild("FlyBV") then
                local bv = Instance.new("BodyVelocity", hrp); bv.Name = "FlyBV"; bv.MaxForce = Vector3.new(4e6, 4e6, 4e6)
                local bg = Instance.new("BodyGyro", hrp); bg.Name = "FlyBG"; bg.MaxTorque = Vector3.new(4e6, 4e6, 4e6)
            end
            hrp.FlyBG.CFrame = Camera.CFrame
            local move = Vector3.new(0,0,0)
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then move = move + Camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then move = move - Camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then move = move + Camera.CFrame.RightVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then move = move - Camera.CFrame.RightVector end
            hrp.FlyBV.Velocity = move * _G.FlySpeed
        end
    end)
end)

UserInputService.JumpRequest:Connect(function()
    if _G.InfiniteJump then lp.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping") end
end)

-- HUD
local function BuildHUD()
    local sg = Instance.new("ScreenGui", lp.PlayerGui)
    sg.Name = "SOV_HUD"
    local f = Instance.new("Frame", sg); f.Size = UDim2.new(0, 170, 0, 85); f.Position = UDim2.new(0, 10, 0, 10); f.BackgroundColor3 = Color3.new(0,0,0); f.BackgroundTransparency = 0.5
    Instance.new("UICorner", f)
    local l = Instance.new("TextLabel", f); l.Size = UDim2.new(1,0,1,0); l.BackgroundTransparency = 1; l.TextColor3 = Color3.new(1,1,1); l.Font = Enum.Font.Code; l.TextSize = 12
    task.spawn(function()
        while task.wait(0.3) do
            if not sg.Parent then break end
            l.Text = string.format("SOVEREIGN V46\nSPD: %d | JMP: %d\nFOV: %d | LANG: %s", _G.Speed, _G.Jump, _G.FOV, _G.Language)
        end
    end)
end
BuildHUD()

Rayfield:Notify({Title = "Sovereign Ultimate", Content = "HazÄ±r! Avatar butonu eklendi.", Duration = 5})
