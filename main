-- FONKSƒ∞YONLAR
local function applySpeed(v)
    _G.Speed = math.clamp(v, MIN_SPEED, MAX_SPEED)
    if lp.Character and lp.Character:FindFirstChildOfClass("Humanoid") then
        lp.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = _G.Speed [cite: 7]
    end
end

local function applyJump(v)
    _G.Jump = math.clamp(v, MIN_JUMP, MAX_JUMP)
    if lp.Character and lp.Character:FindFirstChildOfClass("Humanoid") then
        local h = lp.Character:FindFirstChildOfClass("Humanoid")
        h.JumpPower = _G.Jump [cite: 8]
        h.UseJumpPower = true
    end
end

local function applyFOV(v)
    _G.FOV = math.clamp(v, MIN_FOV, MAX_FOV)
    if Camera then Camera.FieldOfView = _G.FOV [cite: 9] end
end

