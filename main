-- 1. PREMIUM ANIMATED LOADER (Geli≈ümi≈ü)
local function PremiumLoader()
    local sg = Instance.new("ScreenGui", game:GetService("CoreGui"))
    sg.Name = "SovPremiumLoader"
    sg.IgnoreGuiInset = true
    
    local bgImg = Instance.new("ImageLabel", sg)
    bgImg.Size = UDim2.new(1, 0, 1, 0)
    bgImg.Image = "rbxassetid://12521111620" 
    bgImg.ScaleType = Enum.ScaleType.Crop
    bgImg.ImageTransparency = 1
    
    local blur = Instance.new("BlurEffect", game.Lighting)
    blur.Size = 0
    
    local main = Instance.new("Frame", sg)
    main.Size = UDim2.new(0, 450, 0, 250)
    main.Position = UDim2.new(0.5, 0, 0.5, 0)
    main.AnchorPoint = Vector2.new(0.5, 0.5)
    main.BackgroundTransparency = 1
    
    local title = Instance.new("TextLabel", main)
    title.Size = UDim2.new(1, 0, 0, 60)
    title.Text = "SOVEREIGN APEX V46"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 45
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextTransparency = 1
    title.BackgroundTransparency = 1
    
    local status = Instance.new("TextLabel", main)
    status.Position = UDim2.new(0, 0, 0.5, 0)
    status.Size = UDim2.new(1, 0, 0, 30)
    status.Text = "Yapay Zeka Mod√ºlleri Y√ºkleniyor..."
    status.Font = Enum.Font.Gotham
    status.TextSize = 20
    status.TextColor3 = Color3.fromRGB(0, 200, 255)
    status.TextTransparency = 1
    status.BackgroundTransparency = 1

    local ts = game:GetService("TweenService")
    ts:Create(bgImg, TweenInfo.new(1.2), {ImageTransparency = 0.2}):Play()
    ts:Create(blur, TweenInfo.new(1.2), {Size = 25}):Play()
    task.wait(0.5)
    ts:Create(title, TweenInfo.new(0.8), {TextTransparency = 0}):Play()
    ts:Create(status, TweenInfo.new(0.8), {TextTransparency = 0}):Play()
    
    local steps = {"E≈üya Protokolleri Hazƒ±rlanƒ±yor...", "Bitcoin TP Kanallarƒ± A√ßƒ±lƒ±yor...", "Sistem Tamamlandƒ±!"}
    for _, step in pairs(steps) do
        status.Text = step
        task.wait(0.9)
    end
    
    ts:Create(sg, TweenInfo.new(1), {Opacity = 0}):Play() -- Basit karartma
    ts:Create(blur, TweenInfo.new(1), {Size = 0}):Play()
    task.wait(1)
    sg:Destroy()
    if blur then blur:Destroy() end
end

PremiumLoader()

