-- 7. I≈ûINLANMA
TPTab:CreateButton({ Name = LangData[_G.Language].Bank1, Callback = function() lp.Character:MoveTo(Vector3.new(-10.7, 15.4, 275.0)) end })
TPTab:CreateButton({ Name = LangData[_G.Language].Bank2, Callback = function() lp.Character.HumanoidRootPart.CFrame = CFrame.new(-27.9, -51.3, 271.4) end })
TPTab:CreateButton({ Name = LangData[_G.Language].Bank3, Callback = function() lp.Character.HumanoidRootPart.CFrame = CFrame.new(-57.1, -50.8, 187.4) end })
