-- 1. PREMIUM ANIMATED LOADER
local function PremiumLoader()
    local sg = Instance.new("ScreenGui", game:GetService("CoreGui"))
    sg.Name = "SovLoader"
    sg.IgnoreGuiInset = true
    
    -- Arka Plan Resmi (Brookhaven Temalƒ±)
    local bgImg = Instance.new("ImageLabel", sg)
    bgImg.Size = UDim2.new(1, 0, 1, 0)
    bgImg.Image = "rbxassetid://12521111620" -- ≈ûƒ±k bir ≈üehir/manzara asseti
    bgImg.ScaleType = Enum.ScaleType.Crop
    bgImg.ImageTransparency = 1
    
    -- Blur Efekti
    local blur = Instance.new("BlurEffect", game.Lighting)
    blur.Size = 0
    
    -- Karartma Paneli
    local overlay = Instance.new("Frame", sg)
    overlay.Size = UDim2.new(1, 0, 1, 0)
    overlay.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    overlay.BackgroundTransparency = 1
    
    -- Ana Konteyner
    local main = Instance.new("Frame", sg)
    main.Size = UDim2.new(0, 400, 0, 200)
    main.Position = UDim2.new(0.5, 0, 0.5, 0)
    main.AnchorPoint = Vector2.new(0.5, 0.5)
    main.BackgroundTransparency = 1
    
    local title = Instance.new("TextLabel", main)
    title.Size = UDim2.new(1, 0, 0, 50)
    title.Text = "SOVEREIGN APEX V46"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 40
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextTransparency = 1
    title.BackgroundTransparency = 1
    
    local status = Instance.new("TextLabel", main)
    status.Position = UDim2.new(0, 0, 0.4, 0)
    status.Size = UDim2.new(1, 0, 0, 30)
    status.Text = "Sistemler Hazƒ±rlanƒ±yor..."
    status.Font = Enum.Font.Gotham
    status.TextSize = 18
    status.TextColor3 = Color3.fromRGB(0, 170, 255)
    status.TextTransparency = 1
    status.BackgroundTransparency = 1
    
    -- Progress Bar
    local barBg = Instance.new("Frame", main)
    barBg.Position = UDim2.new(0.1, 0, 0.65, 0)
    barBg.Size = UDim2.new(0.8, 0, 0, 6)
    barBg.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    barBg.BorderSizePixel = 0
    barBg.ClipsDescendants = true
    Instance.new("UICorner", barBg)
    
    local barFill = Instance.new("Frame", barBg)
    barFill.Size = UDim2.new(0, 0, 1, 0)
    barFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    barFill.BorderSizePixel = 0
    Instance.new("UICorner", barFill)

    -- ANIMASYON BA≈ûLANGICI
    local ts = game:GetService("TweenService")
    
    -- Giri≈ü Efekti
    ts:Create(bgImg, TweenInfo.new(1.5), {ImageTransparency = 0.3}):Play()
    ts:Create(overlay, TweenInfo.new(1.5), {BackgroundTransparency = 0.4}):Play()
    ts:Create(blur, TweenInfo.new(1.5), {Size = 20}):Play()
    task.wait(0.5)
    ts:Create(title, TweenInfo.new(1), {TextTransparency = 0}):Play()
    task.wait(0.5)
    ts:Create(status, TweenInfo.new(1), {TextTransparency = 0}):Play()
    
    -- Y√ºkleme A≈üamalarƒ±
    local stages = {
        "Veriler √áekiliyor...",
        "Brookhaven Entegrasyonu Kuruluyor...",
        "Bitcoin Bankasƒ± Tanƒ±mlanƒ±yor...",
        "Aray√ºz Optimize Ediliyor...",
        "Tamamlandƒ±!"
    }
    
    for i, msg in ipairs(stages) do
        status.Text = msg
        ts:Create(barFill, TweenInfo.new(0.8), {Size = UDim2.new(i/5, 0, 1, 0)}):Play()
        task.wait(0.8)
    end
    
    -- √áƒ±kƒ±≈ü Efekti
    ts:Create(main, TweenInfo.new(0.8), {Size = UDim2.new(0, 0, 0, 0), BackgroundTransparency = 1}):Play()
    ts:Create(title, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    ts:Create(status, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    ts:Create(blur, TweenInfo.new(1), {Size = 0}):Play()
    ts:Create(overlay, TweenInfo.new(1), {BackgroundTransparency = 1}):Play()
    ts:Create(bgImg, TweenInfo.new(1), {ImageTransparency = 1}):Play()
    
    task.wait(1)
    sg:Destroy()
    blur:Destroy()
end

-- Loader'ƒ± arka planda deƒüil, scriptin ba≈üƒ±nda √ßalƒ±≈ütƒ±r
PremiumLoader()

-- 2. ANA SERVƒ∞SLER
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local lp = Players.LocalPlayer
local Camera = workspace.CurrentCamera

_G.Speed = 16
_G.Jump = 50
_G.FOV = 70
_G.SpeedEnabled = false
_G.JumpEnabled = false
_G.Fly = false
_G.Noclip = false
_G.InfiniteJump = false

-- 3. RAYFIELD UI (Sadece Gerekenler)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "üëë SOVEREIGN V46 | PREMIUM",
   LoadingTitle = "Ho≈ü Geldin, " .. lp.Name,
   LoadingSubtitle = "by EgeKazak_Real1",
   Theme = "DarkBlue",
   ConfigurationSaving = { Enabled = false }
})

local MainTab = Window:CreateTab("üè† Ana Panel", 4483362458)
local MoveTab = Window:CreateTab("‚ö° Hareket", 4483362458)
local TPTab = Window:CreateTab("‚úàÔ∏è I≈üƒ±nlanma", 4483362458)
local ToolTab = Window:CreateTab("üì¶ E≈üyalar", 4483362458)
local ExtraTab = Window:CreateTab("‚ú® Ekstralar", 4483362458)

-- 4. ANA PANEL (FULL ADS & RESET)
MainTab:CreateButton({
    Name = "üì¢ T√úM REKLAMLARI VE FRAMELERƒ∞ A√á",
    Callback = function()
        pcall(function()
            for _, v in pairs(lp.PlayerGui:GetDescendants()) do
                if v:IsA("GuiObject") and (v.Name:lower():find("ad") or v.Name:lower():find("frame") or v.Name:lower():find("promo")) then
                    v.Visible = true
                end
            end
        end)
    end,
})

MainTab:CreateButton({
    Name = "üîÑ Ayarlarƒ± Sƒ±fƒ±rla",
    Callback = function()
        _G.Speed = 16; _G.Jump = 50; _G.FOV = 70; _G.SpeedEnabled = false; _G.JumpEnabled = false
        Camera.FieldOfView = 70
    end,
})

-- 5. HAREKET (SAYI + ON/OFF + +/-)
MoveTab:CreateToggle({ Name = "Hƒ±z Aktif", CurrentValue = false, Callback = function(v) _G.SpeedEnabled = v end })
MoveTab:CreateInput({
    Name = "Hƒ±z Deƒüeri", PlaceholderText = "16-500",
    Callback = function(v) _G.Speed = tonumber(v) or 16 end,
})
MoveTab:CreateButton({ Name = "Hƒ±z +10", Callback = function() _G.Speed = _G.Speed + 10 end })
MoveTab:CreateButton({ Name = "Hƒ±z -10", Callback = function() _G.Speed = _G.Speed - 10 end })

MoveTab:CreateDivider()

MoveTab:CreateToggle({ Name = "Zƒ±plama Aktif", CurrentValue = false, Callback = function(v) _G.JumpEnabled = v end })
MoveTab:CreateInput({
    Name = "Zƒ±plama Deƒüeri", PlaceholderText = "50-500",
    Callback = function(v) _G.Jump = tonumber(v) or 50 end,
})
MoveTab:CreateButton({ Name = "Zƒ±plama +10", Callback = function() _G.Jump = _G.Jump + 10 end })

-- 6. I≈ûINLANMA (Bƒ∞TCOƒ∞N DAHƒ∞L)
TPTab:CreateButton({ Name = "üí∞ Merkez Bankasƒ±", Callback = function() lp.Character:MoveTo(Vector3.new(-10.7, 15.4, 275.0)) end })
TPTab:CreateButton({ Name = "üí∞ Bitcoin Bankasƒ±", Callback = function() lp.Character.HumanoidRootPart.CFrame = CFrame.new(-133.8, -55.4, 231.8) end })
TPTab:CreateButton({ Name = "üí∞ Altƒ±n Bankasƒ±", Callback = function() lp.Character.HumanoidRootPart.CFrame = CFrame.new(-27.9, -51.3, 271.4) end })

-- 7. E≈ûYALAR (BROOKHAVEN)
ToolTab:CreateDropdown({
    Name = "E≈üya Se√ß",
    Options = {"MoneyGun", "Hammer", "Pizza", "KeyCard", "Camera", "Flashlight", "Briefcase"},
    CurrentOption = "MoneyGun",
    Callback = function(Option)
        pcall(function()
            local tool = ReplicatedStorage:FindFirstChild(Option, true)
            if tool then tool:Clone().Parent = lp.Backpack end
        end)
    end,
})

-- 8. EKSTRALAR (FOV +/-)
ExtraTab:CreateInput({
    Name = "FOV Deƒüeri", PlaceholderText = "70-120",
    Callback = function(v) _G.FOV = tonumber(v) or 70; Camera.FieldOfView = _G.FOV end,
})
ExtraTab:CreateButton({ Name = "FOV +5", Callback = function() _G.FOV = _G.FOV + 5; Camera.FieldOfView = _G.FOV end })
ExtraTab:CreateButton({ Name = "FOV -5", Callback = function() _G.FOV = _G.FOV - 5; Camera.FieldOfView = _G.FOV end })
ExtraTab:CreateToggle({ Name = "Sonsuz Zƒ±plama", Callback = function(v) _G.InfiniteJump = v end })

-- 9. ANA D√ñNG√ú
RunService.Heartbeat:Connect(function()
    pcall(function()
        local char = lp.Character
        local hum = char and char:FindFirstChildOfClass("Humanoid")
        if hum then
            hum.WalkSpeed = _G.SpeedEnabled and _G.Speed or 16
            hum.JumpPower = _G.JumpEnabled and _G.Jump or 50
        end
    end)
end)

UserInputService.JumpRequest:Connect(function()
    if _G.InfiniteJump and lp.Character then
        lp.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
    end
end)

Rayfield:Notify({Title = "Sovereign Ultimate", Content = "Giri≈ü Ba≈üarƒ±lƒ±!", Duration = 5})
