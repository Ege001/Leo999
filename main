-- 1. LOADER (Y√úKLEME EKRANI)
local function Startup()
    local sg = Instance.new("ScreenGui", game.CoreGui)
    local f = Instance.new("Frame", sg)
    f.Size = UDim2.new(1, 0, 1, 0)
    f.BackgroundColor3 = Color3.fromRGB(10, 10, 20)
    
    local t = Instance.new("TextLabel", f)
    t.Size = UDim2.new(1, 0, 0, 100)
    t.Position = UDim2.new(0, 0, 0.45, 0)
    t.Text = "SOVEREIGN APEX V46\nSistemler Hazƒ±rlanƒ±yor..."
    t.TextColor3 = Color3.fromRGB(0, 150, 255)
    t.Font = Enum.Font.GothamBold
    t.TextSize = 35
    t.BackgroundTransparency = 1
    
    task.wait(1.5)
    sg:Destroy()
end
pcall(Startup)

-- 2. SERVƒ∞SLER & DEƒûƒ∞≈ûKENLER
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Lighting = game:GetService("Lighting")
local lp = Players.LocalPlayer
local Camera = workspace.CurrentCamera

_G.Speed = 16
_G.Jump = 50
_G.FOV = 70
_G.Noclip = false
_G.Fly = false
_G.FlySpeed = 50

local connections = {}

-- 3. RAYFIELD UI
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "üëë SOVEREIGN V46 | FULL",
   LoadingTitle = "Apex Ultimate Edition",
   LoadingSubtitle = "by EgeKazak_Real1",
   Theme = "DarkBlue",
   ConfigurationSaving = { Enabled = false }
})

-- SEKMELER
local MainTab = Window:CreateTab("üè† Ana Panel", 4483362458)
local MoveTab = Window:CreateTab("‚ö° Hareket", 4483362458)
local TPTab = Window:CreateTab("‚úàÔ∏è I≈üƒ±nlanma", 4483362458)
local ExtraTab = Window:CreateTab("‚ú® Ekstralar", 4483362458)

-- 4. ANA PANEL (ADS & DESTROY)
MainTab:CreateButton({
   Name = "üì¢ REKLAM MEN√úS√úN√ú TETƒ∞KLE (ADS)",
   Callback = function()
       pcall(function()
           -- GUI i√ßindeki reklamlarƒ± bulma
           for _, v in pairs(lp.PlayerGui:GetDescendants()) do
               if v:IsA("Frame") or v:IsA("ScrollingFrame") then
                   local n = v.Name:lower()
                   if n:find("ad") or n:find("store") or n:find("shop") or n:find("promo") then
                       v.Visible = true
                       if v.Parent:IsA("GuiObject") then v.Parent.Visible = true end
                   end
               end
           end
           -- Remote event denemesi
           local rem = ReplicatedStorage:FindFirstChild("ShowAds", true) or ReplicatedStorage:FindFirstChild("OpenShop", true)
           if rem and rem:IsA("RemoteEvent") then rem:FireServer() end
           
           Rayfield:Notify({Title = "ƒ∞≈ülem Ba≈üarƒ±lƒ±", Content = "Reklam/Maƒüaza men√ºleri zorlandƒ±.", Duration = 3})
       end)
   end,
})

MainTab:CreateButton({
    Name = "üóëÔ∏è SCRIPTI TAMAMEN KALDIR (DESTROY)",
    Callback = function()
        pcall(function()
            -- Deƒüerleri sƒ±fƒ±rla
            _G.Speed = 16
            _G.Jump = 50
            _G.Fly = false
            _G.Noclip = false
            Camera.FieldOfView = 70
            
            -- D√∂ng√ºleri durdur
            for _, c in pairs(connections) do c:Disconnect() end
            
            -- HUD ve Men√ºy√º sil
            if lp.PlayerGui:FindFirstChild("SOV_HUD") then lp.PlayerGui.SOV_HUD:Destroy() end
            Rayfield:Destroy()
        end)
    end,
})

-- 5. HAREKET KONTROLLERƒ∞ (+ / - BUTONLU)
