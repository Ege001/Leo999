-- Modern UI Yükleme
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local lp = game.Players.LocalPlayer
local char = lp.Character or lp.CharacterAdded:Wait()
local runService = game:GetService("RunService")
local camera = workspace.CurrentCamera

-- DİL VE KULLANICI AYARI
local myName = lp.Name -- Senin kullanıcı adını otomatik alır

local Window = Rayfield:CreateWindow({
   Name = "Gemini Hub V11 | " .. myName .. " Edition",
   LoadingTitle = "Modül Erişimi Sağlanıyor...",
   LoadingSubtitle = "Ege001 Özel - Full Access",
   ConfigurationSaving = { Enabled = true, FolderName = "GeminiV11" }
})

-- FLY SİSTEMİ (JOYSTICK & WASD)
local flying = false
local flySpeed = 50
local bGyro, bVel

-- SEKMELER
local VIPTab = Window:CreateTab("ALL Gamepass & Ads", 4483362458)
local MainTab = Window:CreateTab("Karakter (Fly/Noclip)", 4483362458)
local ViewTab = Window:CreateTab("İzleme & Troll", 4483362458)
local CarTab = Window:CreateTab("Araç Kontrol", 4483362458)

-- 1. MODÜL VE ADSTORE BYPASS (ALLGAMEPASSES.TXT ENTEGRASYONLU)
VIPTab:CreateButton({
   Name = "Tüm Brookhaven Sistemini Adıma Tanımla",
   Callback = function()
      pcall(function()
          -- AllGamepasses.txt modülündeki tüm ID'leri sisteme zorla
          local passIDs = {850049439, 667983868, 82773869, 48857519, 25341106, 19660651, 15927395, 13489552, 13405328, 10991687, 10991517, 9066988, 9066980, 9066970, 9066924, 1221383640, 1459820822} [cite: 6, 7, 8, 9, 10, 11, 12, 13, 14]

          -- MarketPlace Hook (Modül Fonksiyonlarını Taklit Eder)
          local mt = getrawmetatable(game)
          setreadonly(mt, false)
          local old = mt.__index
          mt.__index = newcclosure(function(t, k)
              if k == "UserOwnsGamePassAsync" or k == "PlayerOwnsAsset" then return true end
              return old(t, k)
          end)

          -- AllPassesFetched Engelini Kaldır (Görseldeki Çözüm)
          for _, v in pairs(getgc(true)) do
              if type(v) == "table" and (rawget(v, "AllPassesFetched") ~= nil or rawget(v, "__GAMEPASS") ~= nil) then
                  v.AllPassesFetched = true
                  v.__GAMEPASS = true
                  v.Premium = true
                  v.VIP = true
              end
          end

          -- AdStore Menüsünü (Ads Button) Getir
          local adStore = lp.PlayerGui.MainGUIHandler:FindFirstChild("AdStore", true)
          if adStore then adStore.Visible = true end

          Rayfield:Notify({Title = "SİSTEM", Content = "Tüm modüller " .. myName .. " adına tanımlandı!", Duration = 5})
      end)
   end,
})

-- 2. DÜZELTİLMİŞ FLY (TAM KONTROL)
MainTab:CreateToggle({
   Name = "Uçma (Fly) - On/Off",
   CurrentValue = false,
   Callback = function(Value)
      flying = Value
      local root = lp.Character:WaitForChild("HumanoidRootPart")
      local hum = lp.Character:WaitForChild("Humanoid")

      if flying then
          bGyro = Instance.new("BodyGyro", root)
          bGyro.P = 9e4
          bGyro.maxTorque = Vector3.new(9e9, 9e9, 9e9)
          bVel = Instance.new("BodyVelocity", root)
          bVel.maxForce = Vector3.new(9e9, 9e9, 9e9)

          spawn(function()
              while flying do
                  runService.RenderStepped:Wait()
                  local controls = require(lp.PlayerScripts:WaitForChild("PlayerModule")):GetControls()
                  local moveVec = controls:GetMoveVector()
                  bVel.Velocity = (camera.CFrame.LookVector * -moveVec.Z + camera.CFrame.RightVector * moveVec.X) * flySpeed
                  bGyro.CFrame = camera.CFrame
                  hum.PlatformStand = true
              end
              if bGyro then bGyro:Destroy() end
              if bVel then bVel:Destroy() end
              hum.PlatformStand = false
          end)
      end
   end,
})

MainTab:CreateSlider({
   Name = "Uçma Hızı Ayarı",
   Range = {10, 500},
   Increment = 10,
   CurrentValue = 50,
   Callback = function(Value) flySpeed = Value end,
})

MainTab:CreateToggle({
   Name = "Noclip (Duvar Geçme)",
   CurrentValue = false,
   Callback = function(Value)
      _G.Noclip = Value
      runService.Stepped:Connect(function()
         if _G.Noclip and lp.Character then
            for _, v in pairs(lp.Character:GetDescendants()) do
               if v:IsA("BasePart") then v.CanCollide = false end
            end
         end
      end)
   end,
})

-- 3. ARAÇ VE AYARLAR
CarTab:CreateToggle({
   Name = "Araba Boost (Full Power)",
   CurrentValue = false,
   Callback = function(Value)
      _G.CarFast = Value
      spawn(function()
         while _G.CarFast do
            pcall(function()
                for _, v in pairs(workspace.Vehicles:GetChildren()) do
                    local seat = v:FindFirstChildWhichIsA("VehicleSeat", true)
                    if seat and seat.Occupant and seat.Occupant.Parent == lp.Character then
                        seat.MaxSpeed = 400
                        seat.Torque = 20000
                    end
                end
            end)
            task.wait(0.2)
         end
      end)
   end,
})

-- DESTROY BUTTON
Window:CreateTab("Ayarlar").CreateButton({
   Name = "Scripti Kapat (Destroy)",
   Callback = function() Rayfield:Destroy() end,
})
