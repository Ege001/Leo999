-- 1. LOADER (YÃœKLEME EKRANI)
local function Startup()
    local sg = Instance.new("ScreenGui", game.CoreGui)
    local f = Instance.new("Frame", sg)
    f.Size = UDim2.new(1, 0, 1, 0)
    f.BackgroundColor3 = Color3.fromRGB(10, 10, 20)
    
    local t = Instance.new("TextLabel", f)
    t.Size = UDim2.new(1, 0, 0, 100)
    t.Position = UDim2.new(0, 0, 0.45, 0)
    t.Text = "SOVEREIGN APEX V46\nSistemler HazÄ±rlanÄ±yor..."
    t.TextColor3 = Color3.fromRGB(0, 150, 255)
    t.Font = Enum.Font.GothamBold
    t.TextSize = 35
    t.BackgroundTransparency = 1
    
    task.wait(1.5)
    sg:Destroy()
end
pcall(Startup)

