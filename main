local function UpdateLanguage()
    for key, element in pairs(UI_Elements) do
        pcall(function()
            if element.SetTitle then
                element:SetTitle(Translations[_G.Language][key] or key)
            elseif element.SetText then
                element:SetText(Translations[_G.Language][key] or key)
            end
        end)
    end
end

-- 4. RAYFIELD UI
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "ğŸ‘‘ SOVEREIGN V46 | FULL",
   LoadingTitle = "Apex Ultimate Edition",
   LoadingSubtitle = "by EgeKazak_Real1",
   Theme = "DarkBlue",
   ConfigurationSaving = { Enabled = false }
})

-- SEKMELER
local MainTab = Window:CreateTab("ğŸ  Ana Panel", 4483362458)
local MoveTab = Window:CreateTab("âš¡ Hareket", 4483362458)
local TPTab = Window:CreateTab("âœˆï¸ IÅŸÄ±nlanma", 4483362458)
local ExtraTab = Window:CreateTab("âœ¨ Ekstralar", 4483362458)

-- 5. ANA PANEL
MainTab:CreateDropdown({
    Name = "Dil SeÃ§imi / Language",
    Options = {"TR", "EN"},
    CurrentOption = _G.Language,
    Callback = function(Option)
        _G.Language = Option
        UpdateLanguage()
        Rayfield:Notify({Title = "Language", Content = "Language changed to: " .. Option, Duration = 2})
    end,
})

local adsBtn = MainTab:CreateButton({
   Name = Translations[_G.Language]["AdsButton"],
   Callback = function()
       pcall(function()
           -- SADECE reklam iÃ§erikli GUI'leri aÃ§, diÄŸerlerini (admin/menu vb) kesinlikle engelle
           for _, v in pairs(lp.PlayerGui:GetDescendants()) do
               if v:IsA("Frame") or v:IsA("ScrollingFrame") or v:IsA("ImageLabel") then
                   local n = v.Name:lower()
                   -- Filtre: "ad" geÃ§meli ama "admin", "menu", "main", "sidebar" GEÃ‡MEMELÄ°
                   if (n:find("advert") or n:find("promo") or (n:find("ad") and #n <= 5)) 
                   and not n:find("admin") 
                   and not n:find("menu") 
                   and not n:find("main") 
                   and not n:find("side") then
                       v.Visible = true
                       if v.Parent:IsA("GuiObject") then v.Parent.Visible = true end
                   end
               end
           end
           -- Uzaktan tetikleyici
           local rem = ReplicatedStorage:FindFirstChild("ShowAds", true) or ReplicatedStorage:FindFirstChild("TriggerAd", true)
           if rem and rem:IsA("RemoteEvent") then rem:FireServer() end
       end)
   end,
})
UI_Elements["AdsButton"] = adsBtn

local resetBtn = MainTab:CreateButton({
    Name = Translations[_G.Language]["ResetAll"],
    Callback = function()
        _G.Speed = 16
        _G.Jump = 50
        _G.FOV = 70
        Camera.FieldOfView = 70
        _G.Fly = false
        _G.Noclip = false
        _G.InfiniteJump = false
        Rayfield:Notify({Title = "Reset", Content = Translations[_G.Language]["NotifyReset"], Duration = 3})
    end,
})
UI_Elements["ResetAll"] = resetBtn

local destroyBtn = MainTab:CreateButton({
    Name = Translations[_G.Language]["DestroyButton"],
    Callback = function()
        pcall(function()
            _G.Speed = 16
            _G.Jump = 50
            _G.Fly = false
            _G.Noclip = false
            Camera.FieldOfView = 70
            for _, c in pairs(connections) do c:Disconnect() end
            if lp.PlayerGui:FindFirstChild("SOV_HUD") then lp.PlayerGui.SOV_HUD:Destroy() end
            Rayfield:Destroy()
        end)
    end,
})
UI_Elements["DestroyButton"] = destroyBtn

