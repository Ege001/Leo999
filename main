-- ğŸŒ€ 1. GHOST LOADING SCREEN
local function GhostLoading()
    local sg = Instance.new("ScreenGui", game.CoreGui)
    local frame = Instance.new("Frame", sg)
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundColor3 = Color3.fromRGB(3, 3, 5)
    
    local txt = Instance.new("TextLabel", frame)
    txt.Size = UDim2.new(0, 600, 0, 100)
    txt.Position = UDim2.new(0.5, -300, 0.45, 0)
    txt.Text = "SOVEREIGN GHOST V43\nSistemler Ege Ä°Ã§in Bypass Ediliyor..."
    txt.TextColor3 = Color3.fromRGB(0, 170, 255)
    txt.Font = Enum.Font.Code
    txt.TextSize = 25
    txt.BackgroundTransparency = 1
    
    task.wait(2.5)
    sg:Destroy()
end
GhostLoading()

