-- Sovereign Elite UI Loader
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local lp = game.Players.LocalPlayer
local camera = workspace.CurrentCamera
local rs = game:GetService("ReplicatedStorage")
local runService = game:GetService("RunService")

-- PENCERE AYARLARI (FotoÄŸraftaki gibi tarz menÃ¼)
local Window = Rayfield:CreateWindow({
   Name = "ğŸ‘‘ SOVEREIGN ELITE | V31",
   LoadingTitle = "Sistemler BaÅŸlatÄ±lÄ±yor...",
   LoadingSubtitle = "EgeKazak_Real1 Ä°Ã§in Optimize Edildi",
   ConfigurationSaving = { Enabled = true, FolderName = "SovereignElite" },
   Theme = "DarkBlue" -- Neon ve ÅŸÄ±k gÃ¶rÃ¼nÃ¼m
})

-- DEÄÄ°ÅKENLER
local flying, noclip, infJump = false, false, false
local flySpeed, viewTarget = 50, nil

-- --- [KATEGORÄ°LER] ---
local MainTab = Window:CreateTab("ğŸ  Ana Panel", 4483362458)
local PlayerTab = Window:CreateTab("ğŸ‘¤ Oyuncu", 4483362458)
local MovementTab = Window:CreateTab("âš¡ Hareket", 4483362458)
local VisualTab = Window:CreateTab("ğŸŒˆ GÃ¶rsel (RGB)", 4483362458)
local ToolTab = Window:CreateTab("ğŸ“¦ EÅŸya SeÃ§ici", 4483362458)

-- --- [1. ANA PANEL: PLAYERSBAG GOD MODE] ---
MainTab:CreateSection("Sistem KontrolÃ¼")

MainTab:CreateButton({
   Name = "ğŸ”“ PLAYERSBAG UNLOCK (TÃ¼m Yetkiler)",
   Callback = function()
       pcall(function()
           local pb = lp:FindFirstChild("PlayersBag")
           if pb then
               for _, v in pairs(pb:GetDescendants()) do
                   if v:IsA("BoolValue") then v.Value = true
                   elseif v:IsA("NumberValue") or v:IsA("IntValue") then v.Value = 1 end
               end
           end
           Rayfield:Notify({Title = "SÄ°STEM", Content = "EgeKazak_Real1: TÃ¼m veriler TRUE yapÄ±ldÄ±!", Duration = 5})
       end)
   end,
})

MainTab:CreateButton({
   Name = "ğŸ“¢ Ads MenÃ¼sÃ¼nÃ¼ Zorla AÃ§",
   Callback = function()
       pcall(function()
           local gui = lp.PlayerGui:FindFirstChild("MainGUIHandler", true)
           local ads = gui and gui:FindFirstChild("AdStore", true)
           if ads then ads.Visible = true; ads.Position = UDim2.new(0.5, 0, 0.5, 0) end
       end)
   end,
})

-- --- [2. OYUNCU: VIEW & AVATAR COPY] ---
PlayerTab:CreateSection("Oyuncu EtkileÅŸimi")

PlayerTab:CreateInput({
   Name = "Oyuncu Ara", PlaceholderText = "Ä°sim...",
   Callback = function(t)
       for _, p in pairs(game.Players:GetPlayers()) do
           if p.Name:lower():find(t:lower()) then viewTarget = p end
       end
   end,
})

PlayerTab:CreateToggle({
   Name = "View Player (Ä°zle)", CurrentValue = false,
   Callback = function(v)
       camera.CameraSubject = (v and viewTarget) and viewTarget.Character.Humanoid or lp.Character.Humanoid
   end,
})

PlayerTab:CreateButton({
   Name = "Avatar Kopyala (Copy)",
   Callback = function()
       if viewTarget then lp.CharacterAppearanceId = viewTarget.UserId; lp.Character:BreakJoints() end
   end,
})

-- --- [3. HAREKET: FLY / NOCLIP / INF JUMP] ---
MovementTab:CreateSection("Fizik AyarlarÄ±")

MovementTab:CreateSlider({
   Name = "YÃ¼rÃ¼me HÄ±zÄ± (WalkSpeed)", Range = {16, 500}, CurrentValue = 16,
   Callback = function(v) lp.Character.Humanoid.WalkSpeed = v end,
})

MovementTab:CreateSlider({
   Name = "ZÄ±plama GÃ¼cÃ¼ (JumpPower)", Range = {50, 500}, CurrentValue = 50,
   Callback = function(v) lp.Character.Humanoid.JumpPower = v end,
})

MovementTab:CreateToggle({
   Name = "Noclip (Duvar GeÃ§me)", CurrentValue = false,
   Callback = function(v)
       noclip = v
       runService.Stepped:Connect(function()
           if noclip and lp.Character then
               for _, p in pairs(lp.Character:GetDescendants()) do
                   if p:IsA("BasePart") then p.CanCollide = false end
               end
           end
       end)
   end,
})

MovementTab:CreateToggle({
   Name = "Infinite Jump (SÄ±nÄ±rsÄ±z ZÄ±plama)", CurrentValue = false,
   Callback = function(v) infJump = v end,
})

game:GetService("UserInputService").JumpRequest:Connect(function()
    if infJump then lp.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping") end
end)

-- --- [4. GÃ–RSEL: RGB & RAINBOW HOUSES] ---
VisualTab:CreateSection("Efektler")

VisualTab:CreateToggle({
   Name = "RGB AraÃ§lar & Rainbow Evler", CurrentValue = false,
   Callback = function(v)
       _G.EliteVisual = v
       spawn(function()
           while _G.EliteVisual do
               local c = Color3.fromHSV(tick() % 5 / 5, 1, 1)
               for _, car in pairs(workspace.Vehicles:GetChildren()) do
                   if car:FindFirstChild("Body") then car.Body.Color = c end
               end
               for _, h in pairs(workspace.Houses:GetChildren()) do
                   local cp = h:FindFirstChild("HouseColor", true)
                   if cp then cp.Color = c end
               end
               task.wait(0.1)
           end
       end)
   end,
})

-- --- [5. EÅYA SEÃ‡Ä°CÄ°: VIEW TOOLS] ---
ToolTab:CreateSection("Envanter")

local tools = {}
for _, t in pairs(rs:GetDescendants()) do if t:IsA("Tool") then table.insert(tools, t.Name) end end
ToolTab:CreateDropdown({
   Name = "EÅŸya SeÃ§", Options = tools,
   Callback = function(o)
       local t = rs:FindFirstChild(o, true)
       if t then t:Clone().Parent = lp.Backpack end
   end,
})

