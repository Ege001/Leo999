-- 5. Ä°ZLEYÄ°CÄ° VE AVATAR KONTROLÃœ [cite: 34, 40]
local function getNames()
    local t = {}
    for _,p in ipairs(Players:GetPlayers()) do table.insert(t, p.Name) end
    return t
end

local selectedName = lp.Name
local dropdown = ViewerTab:CreateDropdown({
    Name = "Oyuncu SeÃ§",
    Options = getNames(),
    CurrentOption = selectedName,
    Callback = function(opt) selectedName = opt end,
})

ViewerTab:CreateButton({
    Name = "ğŸ” Ä°zle (View)",
    Callback = function()
        local target = Players:FindFirstChild(selectedName)
        if target and target.Character then
            Camera.CameraSubject = target.Character:FindFirstChildWhichIsA("Humanoid")
        end
    end
})

ViewerTab:CreateButton({
    Name = "ğŸ§â€â™‚ï¸ AvatarÄ± Kopyala",
    Callback = function()
        local p = Players:FindFirstChild(selectedName)
        if p and lp.Character then
            local desc = Players:GetHumanoidDescriptionFromUserId(p.UserId)
            lp.Character:FindFirstChildWhichIsA("Humanoid"):ApplyDescription(desc)
        end
    end
})

-- 6. SÄ°STEM DÃ–NGÃœSÃœ (ENFORCE) [cite: 44, 45]
RunService.Heartbeat:Connect(function()
    pcall(function()
        if lp.Character and lp.Character:FindFirstChildWhichIsA("Humanoid") then
            local h = lp.Character:FindFirstChildWhichIsA("Humanoid")
            h.WalkSpeed = _G.Speed
            h.JumpPower = _G.Jump
            h.UseJumpPower = true
        end
        if _G.Noclip and lp.Character then
            for _,part in pairs(lp.Character:GetDescendants()) do
                if part:IsA("BasePart") then part.CanCollide = false end
            end
        end
    end)
end)

