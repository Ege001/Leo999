-- GLOBAL KONTROLLER
_G.SovereignActive = true
local connections = {}

-- 1. PREMIUM ANIMATED LOADER
local function StartPremiumLoader()
    local sg = Instance.new("ScreenGui", game:GetService("CoreGui"))
    sg.Name = "SovereignLoader"
    sg.IgnoreGuiInset = true
    
    -- Background Image
    local bg = Instance.new("ImageLabel", sg)
    bg.Size = UDim2.new(1, 0, 1, 0)
    bg.Image = "rbxassetid://12521111620" -- Brookhaven/City Theme
    bg.ScaleType = Enum.ScaleType.Crop
    bg.ImageTransparency = 1
    
    local blur = Instance.new("BlurEffect", game.Lighting)
    blur.Size = 0
    
    local mainFrame = Instance.new("Frame", sg)
    mainFrame.Size = UDim2.new(0, 450, 0, 250)
    mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    mainFrame.BackgroundTransparency = 1
    
    local title = Instance.new("TextLabel", mainFrame)
    title.Size = UDim2.new(1, 0, 0, 60)
    title.Text = "SOVEREIGN APEX V46"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 42
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextTransparency = 1
    title.BackgroundTransparency = 1
    
    local status = Instance.new("TextLabel", mainFrame)
    status.Position = UDim2.new(0, 0, 0.5, 0)
    status.Size = UDim2.new(1, 0, 0, 30)
    status.Text = "Sistem Mod√ºlleri Hazƒ±rlanƒ±yor..."
    status.Font = Enum.Font.Gotham
    status.TextSize = 22
    status.TextColor3 = Color3.fromRGB(0, 200, 255)
    status.TextTransparency = 1
    status.BackgroundTransparency = 1

    local barBg = Instance.new("Frame", mainFrame)
    barBg.Position = UDim2.new(0.1, 0, 0.75, 0)
    barBg.Size = UDim2.new(0.8, 0, 0, 8)
    barBg.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    barBg.BorderSizePixel = 0
    local fill = Instance.new("Frame", barBg)
    fill.Size = UDim2.new(0, 0, 1, 0)
    fill.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
    fill.BorderSizePixel = 0
    Instance.new("UICorner", barBg)
    Instance.new("UICorner", fill)

    -- Animasyonlar
    local ts = game:GetService("TweenService")
    ts:Create(bg, TweenInfo.new(1.2), {ImageTransparency = 0.3}):Play()
    ts:Create(blur, TweenInfo.new(1.2), {Size = 25}):Play()
    task.wait(0.5)
    ts:Create(title, TweenInfo.new(0.8), {TextTransparency = 0}):Play()
    ts:Create(status, TweenInfo.new(0.8), {TextTransparency = 0}):Play()
    
    local loadingSteps = {"E≈üya Protokolleri...", "Bitcoin Kanallarƒ±...", "V46 Elite Hazƒ±r!"}
    for i, step in ipairs(loadingSteps) do
        status.Text = step
        ts:Create(fill, TweenInfo.new(1), {Size = UDim2.new(i/3, 0, 1, 0)}):Play()
        task.wait(1.1)
    end
    
    ts:Create(sg, TweenInfo.new(0.8), {Opacity = 0}):Play()
    ts:Create(blur, TweenInfo.new(0.8), {Size = 0}):Play()
    task.wait(0.8)
    sg:Destroy()
    if blur then blur:Destroy() end
end

StartPremiumLoader()

-- 2. SERVƒ∞SLER
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local lp = Players.LocalPlayer
local Camera = workspace.CurrentCamera

-- Global Deƒüi≈ükenler
_G.Speed = 16
_G.Jump = 50
_G.FOV = 70
_G.SpeedEnabled = false
_G.JumpEnabled = false
_G.Fly = false
_G.Noclip = false
_G.InfJump = false
_G.SelectedTool = "MoneyGun"

-- 3. YAPAY ZEKALI E≈ûYA VERME (SMART GIVE)
local function AI_GiveItem(itemName)
    pcall(function()
        -- 1. Yol: Brookhaven Remote
        local remote = ReplicatedStorage:FindFirstChild("ItemRemote", true) or ReplicatedStorage:FindFirstChild("GiveItem", true)
        if remote then remote:FireServer(itemName) end
        
        -- 2. Yol: ReplicatedStorage Clone
        local tool = ReplicatedStorage:FindFirstChild(itemName, true)
        if tool and tool:IsA("Tool") then
            tool:Clone().Parent = lp.Backpack
        else
            -- 3. Yol: Geni≈ü Arama
            for _, v in pairs(ReplicatedStorage:GetDescendants()) do
                if v:IsA("Tool") and v.Name:lower():find(itemName:lower()) then
                    v:Clone().Parent = lp.Backpack
                    break
                end
            end
        end
    end)
end

