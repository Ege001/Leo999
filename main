   Name = "Y√ºr√ºme Hƒ±zƒ±",
   Range = {16, 500},
   CurrentValue = _G.Speed,
   Callback = function(v) _G.Speed = v end,
})

MoveTab:CreateButton({
    Name = "‚ûï Hƒ±zƒ± Artƒ±r (+10)",
    Callback = function() _G.Speed = _G.Speed + 10 end
})

MoveTab:CreateButton({
    Name = "‚ûñ Hƒ±zƒ± D√º≈ü√ºr (-10)",
    Callback = function() _G.Speed = math.max(16, _G.Speed - 10) end
})

