-- --- [2. AI TOOL GIVER: MONEYGUN & MORE] ---
local ToolTab = Window:CreateTab("ğŸ”« EÅŸya Verici", 4483362458)
ToolTab:CreateSection("Gizli EÅŸyalarÄ± Envanterine Al")

local function GiveTool(toolName)
    local foundTool = rs:FindFirstChild(toolName, true)
    if foundTool and foundTool:IsA("Tool") then
        local clone = foundTool:Clone()
        clone.Parent = lp.Backpack
        Rayfield:Notify({Title = "TOOL", Content = toolName .. " Envantere Eklendi!", Duration = 2})
    else
        Rayfield:Notify({Title = "HATA", Content = "EÅŸya bulunamadÄ±.", Duration = 2})
    end
end

ToolTab:CreateButton({
   Name = "ğŸ’µ MONEY GUN (Para SilahÄ±) AL",
   Callback = function() GiveTool("MoneyGun") end,
})

ToolTab:CreateButton({
   Name = "ğŸ”‘ TÃœM ANAHTARLARI AL",
   Callback = function() 
       GiveTool("KeyCard")
       GiveTool("HouseKey")
   end,
})

ToolTab:CreateInput({
   Name = "Ã–zel EÅŸya Ä°smi Yaz", PlaceholderText = "EÅŸya adÄ±...",
   Callback = function(txt) GiveTool(txt) end,
})

