    Name = "üì¢ REKLAMLARI VE PANELLERƒ∞ A√á",
    Callback = function()
        for _, v in pairs(lp.PlayerGui:GetDescendants()) do
            if v:IsA("GuiObject") and (v.Name:lower():find("ad") or v.Name:lower():find("frame")) then
                v.Visible = true
            end
        end
    end,
})

