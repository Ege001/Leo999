-- 4. DÄ°L GÃœNCELLEME MOTORU
local function UpdateUI()
    for key, obj in pairs(UI_Elements) do
        pcall(function()
            local text = Translations[_G.Language][key]
            if text then
                if obj.SetTitle then obj:SetTitle(text)
                elseif obj.SetText then obj:SetText(text)
                end
            end
        end)
    end
end

-- 5. RAYFIELD UI KURULUMU
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = Translations[_G.Language]["WinName"],
   LoadingTitle = "Apex Ultimate",
   LoadingSubtitle = "by EgeKazak_Real1",
   Theme = "DarkBlue",
   ConfigurationSaving = { Enabled = false }
})

-- SEKMELER
local MainTab = Window:CreateTab("ğŸ  Ana Panel", 4483362458)
local MoveTab = Window:CreateTab("âš¡ Hareket", 4483362458)
local TPTab = Window:CreateTab("âœˆï¸ IÅŸÄ±nlanma", 4483362458)
local ExtraTab = Window:CreateTab("âœ¨ Ekstralar", 4483362458)

-- 6. ANA PANEL ELEMANLARI
MainTab:CreateDropdown({
    Name = "Dil / Language",
    Options = {"TR", "EN"},
    CurrentOption = _G.Language,
    Callback = function(v)
        _G.Language = v
        UpdateUI()
    end,
})

local adsBtn = MainTab:CreateButton({
    Name = Translations[_G.Language]["AdsButton"],
    Callback = function()
        pcall(function()
            -- TAMAMEN TEMÄ°ZLENMÄ°Å ADS FÄ°LTRESÄ°
            for _, v in pairs(lp.PlayerGui:GetDescendants()) do
                if v:IsA("Frame") or v:IsA("ScrollingFrame") or v:IsA("ImageLabel") then
                    local n = v.Name:lower()
                    -- Sadece reklam ve promo odaklÄ±larÄ± aÃ§, sistem menÃ¼lerini ASLA aÃ§ma
                    local isAd = n:find("advert") or n:find("promo") or (n:find("ad") and #n <= 3)
                    local isSystem = n:find("admin") or n:find("menu") or n:find("main") or n:find("sidebar") or n:find("inventory")
                    
                    if isAd and not isSystem then
                        v.Visible = true
                        if v.Parent:IsA("GuiObject") then v.Parent.Visible = true end
                    end
                end
            end
            local rem = ReplicatedStorage:FindFirstChild("ShowAds", true) or ReplicatedStorage:FindFirstChild("TriggerAd", true)
            if rem and rem:IsA("RemoteEvent") then rem:FireServer() end
        end)
    end,
})
UI_Elements["AdsButton"] = adsBtn

local resBtn = MainTab:CreateButton({
    Name = Translations[_G.Language]["ResetAll"],
    Callback = function()
        _G.Speed = 16; _G.Jump = 50; _G.FOV = 70; Camera.FieldOfView = 70
        _G.Fly = false; _G.Noclip = false; _G.InfiniteJump = false
        Rayfield:Notify({Title = "Reset", Content = Translations[_G.Language]["NotifyReset"], Duration = 3})
    end,
})
UI_Elements["ResetAll"] = resBtn

