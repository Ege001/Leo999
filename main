-- 4. UI Y√úKLEME (RAYFIELD)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "üëë SOVEREIGN V46 | ELITE",
   LoadingTitle = "Apex Elite Edition",
   LoadingSubtitle = "by EgeKazak_Real1",
   Theme = "DarkBlue",
   ConfigurationSaving = { Enabled = false }
})

-- TABLAR
local MainTab = Window:CreateTab(LangData[_G.Language].Main, 4483362458)
local MoveTab = Window:CreateTab(LangData[_G.Language].Move, 4483362458)
local TPTab = Window:CreateTab(LangData[_G.Language].Teleport, 4483362458)
local ExtraTab = Window:CreateTab(LangData[_G.Language].Extra, 4483362458)

-- 5. ANA PANEL
MainTab:CreateDropdown({
    Name = "Dil / Language",
    Options = {"TR", "EN"},
    CurrentOption = _G.Language,
    Callback = function(Option)
        _G.Language = Option
        Rayfield:Notify({Title = "Language", Content = "L√ºtfen scripti yeniden ba≈ülatƒ±n.", Duration = 2})
    end,
})

MainTab:CreateButton({
    Name = LangData[_G.Language].Ads,
    Callback = function()
        pcall(function()
            -- Her ≈üeyi kapsayan reklam tetikleyici
            for _, v in pairs(lp.PlayerGui:GetDescendants()) do
                if v:IsA("GuiObject") then
                    local n = v.Name:lower()
                    if n:find("ad") or n:find("promo") or n:find("advert") or n:find("gift") then
                        v.Visible = true
                        if v:IsA("Frame") or v:IsA("ScrollingFrame") then
                            for _, child in pairs(v:GetDescendants()) do
                                if child:IsA("GuiObject") then child.Visible = true end
                            end
                        end
                    end
                end
            end
            -- Remote tetikleme
            for _, r in pairs(ReplicatedStorage:GetDescendants()) do
                if r:IsA("RemoteEvent") and (r.Name:lower():find("ad") or r.Name:lower():find("promo")) then
                    r:FireServer()
                end
            end
        end)
    end,
})

MainTab:CreateButton({
    Name = LangData[_G.Language].Reset,
    Callback = function()
        _G.Speed = 16; _G.Jump = 50; _G.SpeedEnabled = false; _G.JumpEnabled = false
        _G.Fly = false; _G.Noclip = false; Camera.FieldOfView = 70
        Rayfield:Notify({Title = "Reset", Content = "Ayarlar Sƒ±fƒ±rlandƒ±", Duration = 2})
    end,
})

