           local adStore = gui and gui:FindFirstChild("AdStore", true)
           if adStore then 
               adStore.Visible = true 
               adStore.Position = UDim2.new(0.5, 0, 0.5, 0)
           end
           Rayfield:Notify({Title = "ADS", Content = "MenÃ¼ tetiklendi.", Duration = 2})
       end)
   end,
})

