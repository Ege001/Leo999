-- GLOBAL KONTROLLER
_G.SovereignActive = true
local connections = {}

-- 1. HATASIZ VE TAKILMAYAN PREMIUM LOADER
local function StartPremiumLoader()
    local sg = Instance.new("ScreenGui")
    sg.Name = "SovHatasizLoader"
    sg.DisplayOrder = 999
    sg.IgnoreGuiInset = true
    
    -- CoreGui korumasƒ±
    local parentSuccess = pcall(function() sg.Parent = game:GetService("CoreGui") end)
    if not parentSuccess then sg.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui") end

    -- Karanlƒ±k Arka Plan
    local bg = Instance.new("Frame", sg)
    bg.Size = UDim2.new(1, 0, 1, 0)
    bg.BackgroundColor3 = Color3.fromRGB(2, 2, 5)
    bg.ZIndex = 1

    local main = Instance.new("Frame", sg)
    main.Size = UDim2.new(0, 400, 0, 200)
    main.Position = UDim2.new(0.5, 0, 0.5, 0)
    main.AnchorPoint = Vector2.new(0.5, 0.5)
    main.BackgroundTransparency = 1
    main.ZIndex = 2

    local title = Instance.new("TextLabel", main)
    title.Size = UDim2.new(1, 0, 0, 50)
    title.Text = "SOVEREIGN APEX V46"
    title.Font = Enum.Font.GothamBold
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextSize = 35
    title.BackgroundTransparency = 1

    local status = Instance.new("TextLabel", main)
    status.Position = UDim2.new(0, 0, 0.4, 0)
    status.Size = UDim2.new(1, 0, 0, 30)
    status.Text = "Sistem Hazƒ±rlanƒ±yor..."
    status.Font = Enum.Font.Gotham
    status.TextColor3 = Color3.fromRGB(0, 170, 255)
    status.TextSize = 18
    status.BackgroundTransparency = 1

    local barBg = Instance.new("Frame", main)
    barBg.Position = UDim2.new(0.1, 0, 0.7, 0)
    barBg.Size = UDim2.new(0.8, 0, 0, 4)
    barBg.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    barBg.BorderSizePixel = 0
    
    local barFill = Instance.new("Frame", barBg)
    barFill.Size = UDim2.new(0, 0, 1, 0)
    barFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    barFill.BorderSizePixel = 0

    -- BAƒûIMSIZ ASENKRON √áALI≈ûTIRMA (Takƒ±lmayƒ± √ñnler)
    task.spawn(function()
        local ts = game:GetService("TweenService")
        local steps = {"Veriler Doƒürulanƒ±yor...", "Protokoller A√ßƒ±lƒ±yor...", "Elite Hazƒ±r!"}
        
        for i, msg in ipairs(steps) do
            status.Text = msg
            ts:Create(barFill, TweenInfo.new(0.7, Enum.EasingStyle.Quart), {Size = UDim2.new(i/#steps, 0, 1, 0)}):Play()
            task.wait(0.8)
        end
        
        -- KESƒ∞N KAPANI≈û
        task.wait(0.2)
        ts:Create(bg, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
        ts:Create(title, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
        ts:Create(status, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
        ts:Create(barBg, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
        task.wait(0.6)
        sg:Destroy()
    end)
end

-- Loader'ƒ± tetikle
StartPremiumLoader()

-- 2. SERVƒ∞SLER
local lp = game:GetService("Players").LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Camera = workspace.CurrentCamera

_G.Speed = 16
_G.Jump = 50
_G.SpeedOn = false
_G.JumpOn = false
_G.InfJump = false
_G.SelectedTool = "MoneyGun"

-- 3. YAPAY ZEKALI E≈ûYA VERME FONKSƒ∞YONU
local function GiveToolAI(toolName)
    pcall(function()
        -- Remote Event Taramasƒ± (Brookhaven i√ßin)
        local remotes = {"ItemRemote", "GiveItem", "RequestTool", "RemoteEvent"}
        for _, rName in pairs(remotes) do
            local r = ReplicatedStorage:FindFirstChild(rName, true)
            if r and r:IsA("RemoteEvent") then
                r:FireServer(toolName)
            end
        end
        
        -- Klasik Clone Metodu
        local tool = ReplicatedStorage:FindFirstChild(toolName, true)
        if tool and tool:IsA("Tool") then
            local c = tool:Clone()
            c.Parent = lp.Backpack
        end
    end)
end

