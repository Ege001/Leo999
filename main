    Name = "‚ûï Zƒ±plama Artƒ±r (+10)",
    Callback = function() _G.Jump = _G.Jump + 10 end
})

MoveTab:CreateButton({
    Name = "‚ûñ Zƒ±plama D√º≈ü√ºr (-10)",
    Callback = function() _G.Jump = math.max(50, _G.Jump - 10) end
})

MoveTab:CreateSection("G√∂r√º≈ü A√ßƒ±sƒ± (FOV)")
MoveTab:CreateButton({
    Name = "‚ûï FOV Artƒ±r (+5)",
    Callback = function() 
        _G.FOV = math.min(120, _G.FOV + 5)
        Camera.FieldOfView = _G.FOV 
    end
})

MoveTab:CreateButton({
    Name = "‚ûñ FOV D√º≈ü√ºr (-5)",
    Callback = function() 
        _G.FOV = math.max(30, _G.FOV - 5)
        Camera.FieldOfView = _G.FOV
    end
})

