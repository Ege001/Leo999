    Name = "üóëÔ∏è SCRIPTI KALDIR (Destroy Script)",
    Callback = function()
        _G.SovereignActive = false
        for _, conn in pairs(connections) do conn:Disconnect() end
        Rayfield:Destroy()
        local h = lp.PlayerGui:FindFirstChild("SovereignHUD")
        if h then h:Destroy() end
    end,
})

