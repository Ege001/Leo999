local Window = Rayfield:CreateWindow({
   Name = "üëë SOVEREIGN V46 ELITE",
   LoadingTitle = "Apex Brookhaven Edition",
   LoadingSubtitle = "by EgeKazak_Real1",
   Theme = "DarkBlue",
