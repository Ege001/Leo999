-- 3. YAPAY ZEKALI E≈ûYA VERME FONKSƒ∞YONU
local function SmartGiveItem(itemName)
    pcall(function()
        -- 1. Y√∂ntem: Brookhaven Remote Tetikleme
        local remote = ReplicatedStorage:FindFirstChild("ItemRemote", true) or ReplicatedStorage:FindFirstChild("GiveItem", true)
        if remote then
            remote:FireServer(itemName)
        end
        
        -- 2. Y√∂ntem: ReplicatedStorage i√ßi Tool Arama ve Zorla Verme
        local tool = ReplicatedStorage:FindFirstChild(itemName, true)
        if tool and tool:IsA("Tool") then
            local clone = tool:Clone()
            clone.Parent = lp.Backpack
            -- Karakter √∂l√ºnce gitmemesi i√ßin karakterin i√ßine de bakƒ±labilir
        else
            -- 3. Y√∂ntem: AI Tabanlƒ± ƒ∞sim Tahmini ve Tarama
            for _, v in pairs(ReplicatedStorage:GetDescendants()) do
                if v:IsA("Tool") and v.Name:lower():find(itemName:lower()) then
                    v:Clone().Parent = lp.Backpack
                    break
                end
            end
        end
    end)
end

