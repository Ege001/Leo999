--[[
    üëë SOVEREIGN ELITE V35 | DARK EDITION
    OWNER: EgeKazak_Real1
    STATUS: UNDETECTED & OPTIMIZED
    THEME: DARK BLUE (NO EYE STRAIN)
]]

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local lp = game.Players.LocalPlayer
local rs = game:GetService("ReplicatedStorage")
local runService = game:GetService("RunService")
local camera = workspace.CurrentCamera

-- üåë KOYU TEMA AYARLARI (G√ñZ YORMAZ)
local Window = Rayfield:CreateWindow({
   Name = "üëë SOVEREIGN V35 | DARK EDITION",
   LoadingTitle = "Sistemler Y√ºkleniyor...",
   LoadingSubtitle = "EgeKazak_Real1 - Dark Mode",
   ConfigurationSaving = { Enabled = true, FolderName = "SovereignV35Dark" },
   Theme = "DarkBlue", -- G√∂z almayan koyu tema
   KeySystem = false
})

-- DEƒûƒ∞≈ûKENLER
local flying, noclip, espEnabled = false, false, false
local flySpeed, viewTarget = 50, nil

-- --- [1. ANA PANEL: DATA & REKLAM] ---
local MainTab = Window:CreateTab("üè† Ana Panel", 4483362458)
MainTab:CreateSection("Sistem Kilitlerini A√ß")

MainTab:CreateButton({
   Name = "üîì FULL BYPASS (Reklam & Yetki)",
   Callback = function()
       pcall(function()
           -- REKLAM Sƒ∞STEMƒ∞Nƒ∞ KANDIRMA (AdService Hook)
           for _, v in pairs(getgc(true)) do
               if type(v) == "table" then
                   if rawget(v, "CanPlayerViewAdvertisements") then
                       v.CanPlayerViewAdvertisements = function() return true end
                   end
               end
           end

           -- PLAYERSBAG (EV ALMA SORUNSUZ)
           local pb = lp:FindFirstChild("PlayersBag")
           if pb then
               for _, v in pairs(pb:GetDescendants()) do
                   -- HouseOwned deƒüerine dokunmuyoruz ki ev alma bozulmasƒ±n
                   if v:IsA("BoolValue") and v.Name ~= "HouseOwned" then 
                       v.Value = true
                   elseif v:IsA("NumberValue") then
                       v.Value = 1
                   end
               end
           end
           Rayfield:Notify({Title = "DARK MODE", Content = "T√ºm kilitler sessizce a√ßƒ±ldƒ±.", Duration = 4})
       end)
   end,
})

MainTab:CreateButton({
   Name = "üì¢ Sponsor / Ads Butonunu Getir",
   Callback = function()
       local gui = lp.PlayerGui:FindFirstChild("MainGUIHandler", true)
       if gui then
           local ads = gui:FindFirstChild("AdStore", true)
           if ads then ads.Visible = true end
           Rayfield:Notify({Title = "ADS", Content = "Reklam men√ºs√º a√ßƒ±ldƒ±.", Duration = 3})
       end
   end,
})

-- --- [2. G√ñRSEL: ESP & RGB] ---
local VisualTab = Window:CreateTab("üëÅÔ∏è G√∂rsel (ESP)", 4483362458)

VisualTab:CreateToggle({
   Name = "ESP (Oyuncularƒ± G√∂r)",
   Callback = function(v)
       espEnabled = v
       if not v then
           -- ESP Kapatma
           for _, p in pairs(game.Players:GetPlayers()) do
               if p.Character and p.Character:FindFirstChild("Highlight") then
                   p.Character.Highlight:Destroy()
               end
           end
       else
           -- ESP D√∂ng√ºs√º
           spawn(function()
               while espEnabled do
                   for _, p in pairs(game.Players:GetPlayers()) do
                       if p ~= lp and p.Character then
                           if not p.Character:FindFirstChild("Highlight") then
                               local hl = Instance.new("Highlight", p.Character)
                               hl.FillColor = Color3.fromRGB(255, 0, 0)
                               hl.OutlineColor = Color3.fromRGB(255, 255, 255)
                           end
                       end
                   end
                   task.wait(1)
               end
           end)
       end
   end,
})

VisualTab:CreateToggle({
   Name = "RGB Ara√ßlar & Evler",
   Callback = function(v)
       _G.DarkRGB = v
       spawn(function()
           while _G.DarkRGB do
               local c = Color3.fromHSV(tick() % 5 / 5, 1, 1)
               for _, car in pairs(workspace.Vehicles:GetChildren()) do
                   if car:FindFirstChild("Body") then car.Body.Color = c end
               end
               -- Ev Rengi (HouseOwned bozmadan)
               for _, h in pairs(workspace.Houses:GetChildren()) do
                   local cp = h:FindFirstChild("HouseColor", true)
                   if cp then cp.Color = c end
               end
               task.wait(0.1)
           end
       end)
   end,
})

-- --- [3. I≈ûINLANMA (TELEPORT)] ---
local TeleportTab = Window:CreateTab("‚úàÔ∏è I≈üƒ±nlanma", 4483362458)

local locations = {
    ["Spawn"] = CFrame.new(0, 10, 0),
    ["Banka (Kasa)"] = CFrame.new(20, 10, 20), -- Koordinatlarƒ± yakla≈üƒ±k
    ["Okul"] = CFrame.new(-100, 10, 50),
    ["Hastane"] = CFrame.new(50, 10, -50),
    ["Yat (Tekne)"] = CFrame.new(-200, 5, -100)
}

for name, cf in pairs(locations) do
    TeleportTab:CreateButton({
        Name = name .. " 'a Git",
        Callback = function()
            if lp.Character and lp.Character:FindFirstChild("HumanoidRootPart") then
                lp.Character.HumanoidRootPart.CFrame = cf
            end
        end,
    })
end

-- --- [4. OYUNCU & ARA√áLAR] ---
local PlayerTab = Window:CreateTab("üë§ Oyuncu", 4483362458)

PlayerTab:CreateInput({
   Name = "Oyuncu Adƒ±", PlaceholderText = "ƒ∞sim...",
   Callback = function(t)
       for _, p in pairs(game.Players:GetPlayers()) do
           if p.Name:lower():find(t:lower()) then viewTarget = p end
       end
   end,
})

PlayerTab:CreateToggle({
   Name = "View (ƒ∞zle)",
   Callback = function(v) camera.CameraSubject = (v and viewTarget) and viewTarget.Character.Humanoid or lp.Character.Humanoid end,
})

PlayerTab:CreateSlider({
   Name = "Hƒ±z (Speed)", Range = {16, 300}, CurrentValue = 16,
   Callback = function(v) lp.Character.Humanoid.WalkSpeed = v end,
})

PlayerTab:CreateToggle({
   Name = "Noclip (Duvar Ge√ß)",
   Callback = function(v)
       noclip = v
       runService.Stepped:Connect(function()
           if noclip and lp.Character then
               for _, p in pairs(lp.Character:GetDescendants()) do
                   if p:IsA("BasePart") then p.CanCollide = false end
               end
           end
       end)
   end,
})

-- --- [AYARLAR] ---
local SettingsTab = Window:CreateTab("‚öôÔ∏è Ayarlar", 4483362458)
SettingsTab:CreateButton({Name = "üî¥ KAPAT (Destroy UI)", Callback = function() Rayfield:Destroy() end})

Rayfield:LoadConfiguration()
